rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Songs Collection
    match /songs/{songId} {
      allow read: if true; 
      allow write: if false; // Only Admin SDK can write
    }

    // 2. Metadata Collection (For the Sync Marker)
    match /metadata/{document} {
      // Clients MUST be able to read this for the caching logic to work
      allow read: if true; 
      
      // Explicitly deny writes so users can't fakes a "sync"
      allow write: if false; 
    }
    
  }
}