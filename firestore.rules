rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Match any document in the 'songs' collection
    match /songs/{songId} {
      // Allow clients to read the data
      // Change to 'if request.auth != null' if login is required
      allow read: if true;

      // Deny all writes (Create, Update, Delete) from the Client SDKs
      // The Admin SDK will bypass this
      allow write: if false;
    }
    
  }
}
